# Configuration de la base de données
DATABASE_URL="postgresql://username:password@localhost:5432/wemoov_db?schema=public"

# Configuration JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Configuration du serveur
PORT=3001
NODE_ENV="development"

# Configuration Mapbox
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# Configuration des paiements mobiles
# Wave Money API
WAVE_API_KEY="your-wave-api-key"
WAVE_API_SECRET="your-wave-api-secret"
WAVE_WEBHOOK_SECRET="your-wave-webhook-secret"

# Orange Money API
ORANGE_API_KEY="your-orange-api-key"
ORANGE_API_SECRET="your-orange-api-secret"

# Configuration Twilio (SMS)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+221xxxxxxxxx"

# Configuration Email (optionnel)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# URLs
FRONTEND_URL="http://localhost:5173"
BACKEND_URL="http://localhost:3001"

# Configuration CORS
CORS_ORIGIN="http://localhost:5173"

# Configuration de sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100